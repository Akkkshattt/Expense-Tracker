@model IEnumerable<Expense_Tracker.Models.Category>



@* <h1>List of Your Expenses</h1> *@

@{
    ViewData["PageTitle"] = "Categories";
    ViewData["PageActionText"] = " + New Category ";
    ViewData["PageActionUrl"] = "/Category/AddorEdit";
}

<div class="row">
    <div class="col-md-7 custom_grid1">
        <ejs-grid id="categories" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Category" field="TitlewithIcon"></e-grid-column>
                <e-grid-column headerText="Type" field="Type" template="#TypeColumntemplate" width="180px"></e-grid-column>
                @* <e-grid-column headerText="Icon" field="Icon"></e-grid-column> *@
                <e-grid-column headerText="Actions" field="Actions" template="#ActionColumntemplate" width="170px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col md-5 custom_grid1">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>

<script id="TypeColumntemplate" type="text/x-template">
   ${if(Type=="Income")}
   <span class="badge bg-success">${Type} </span>
   ${else}
   <span class="badge bg-danger">${Type} </span>
   ${/if}
</script>
<script id="ActionColumntemplate" type="text/x-template">
 <div class="d-flex flex-row justify-content-start gap-4">
     <a href="/Category/AddorEdit/${CategoryId}" class="icons">
         <i class="fa-solid fa-pen"></i>
     </a>
           <a href="/Category/Delete/${CategoryId}" class="icons">
           <i class="fa-solid fa-trash"></i>
     </a>
           <a href="/Category/Details/${CategoryId}" class="icons">
          <i class="fa-solid fa-circle-info"></i>
     </a>
 </div>
</script>

